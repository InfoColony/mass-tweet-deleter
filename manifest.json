{
    "name": "Mass tweet deleter",
    "version": "0.0.1",
    "manifest_version": 3,
    "description": "An extension to mass delete tweets and retweets",
    "author": "Pius Ebiama",
    "icons": {
        "128": "img/icons/icon128.png",
        "48": "img/icons/icon48.ico",
        "16": "img/icons/icon16.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://twitter.com/*"
            ],
            "js": [
                "popup.js"
            ]
        }
    ],
    "action": {
        "default_icon": "img/icons/icon16.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab"
    ]
}